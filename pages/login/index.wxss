.login-wrapper {
  padding: 0 30rpx;
  min-height: 100vh;
  position: relative;
}

.body-wrapper {
  top: 50%;
  left: 50%;
  display: flex;
  flex-direction: column;
  position: absolute;
  transform: translate(-50%, -60%);
}

.title {
  font-size: 25px;
  text-align: center;
}

.content {
  margin-top: 20rpx;
  text-align: center;
  color: #999;
}

.cover {
  align-self: center;
  margin-bottom: 60rpx;
}