.menu-wrapper .cover {
  width: 100%;
  height: 500rpx;
  display: block;
}

.content-wrapper {
  padding: 0 30rpx;
}

.content-wrapper .name {
  font-size: 16px;
  padding: 30rpx 0;
  font-weight: 600;
}

.content-wrapper .content {
  margin-top: 30rpx;
  line-height: 50rpx;
}

.user-wrapper {
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-top: 30rpx;
}

.user-wrapper .avatar {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}

.recipes-wrapper {
  display: flex;
  height: 120rpx;
  border-radius: 5px;
  padding: 20rpx 0 20rpx 20rpx;
  margin: 30rpx 0;
  box-shadow: 0 2px 4px 0 rgba(0, 0, 0, 0.08);
}

.recipe-cover {
  width: 120rpx;
  height: 120rpx;
  border-radius: 5px;
  margin-right: 20rpx;
}

.recipe-info {
  display: flex;
  flex-direction: column;
}

.recipe-name {
  font-size: 14px;
  font-weight: 600;
}

.recipe-author {
  color: #999;
  font-size: 12px;
  padding: 10rpx 0;
}

.info-wrapper {
  display: flex;
  flex-direction: row;
  align-items: center;
  color: #999;
  font-size: 12px;
  margin-bottom: 30rpx;
}