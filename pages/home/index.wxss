.title {
  text-align: center;
}

.select-wrapper {
  padding: 0 40rpx;
}

.info-wrapper {
  color: #999;
  font-size: 12px;
  line-height: 50rpx;
  margin: 10rpx 0;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.info-wrapper .author {
  flex-grow: 1;
}

.info-wrapper text {
  margin: 0 20rpx 0 10rpx;
}

.item-wrapper {
  padding: 20rpx 0;
}

.item-wrapper .cover {
  width: 100%;
  height: 400rpx;
  border-radius: 4px;
}