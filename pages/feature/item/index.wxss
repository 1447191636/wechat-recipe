.item-wrapper {
  min-height: 100vh;
  background-color: #f7f8fa;
}

swiper {
  height: 500rpx;
}

swiper-item image {
  width: 100%;
  height: 100%;
}

.content-wrapper {
  padding: 30rpx;
  background-color: #fff;
}

.user-wrapper {
  display: flex;
  flex-direction: row;
  align-items: flex-start;
}

.user-wrapper .avatar {
  width: 70rpx;
  height: 70rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}

.name-wrapper {
  display: flex;
  flex-direction: column;
  flex-grow: 1;
}

.name-wrapper .date {
  margin-top: 6rpx;
  font-size: 12px;
  color: #999;
}


.content-wrapper .title {
  margin-top: 50rpx;
  font-weight: bold;
  color: #333;
}

.content-wrapper .content {
  margin-top: 30rpx;
  line-height: 50rpx;
  font-size: 16px;
}

.info-wrapper {
  margin-top: 50rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.info-wrapper .info {
  flex-grow: 1;
  font-size: 12px;
  color: #999;
}

.item-wrapper .van-cell {
  bottom: 0;
  position: fixed;
}

.item-wrapper .van-field__body {
  padding-left: 10px;
}

/* 评论 */
.comment-wrapper {
  margin-top: 30rpx;
  background-color: #fff;
  padding: 0 30rpx;
  font-size: 14px;
}

.comment {
  position: relative;
  padding: 30rpx 0;
}

.comment ::after {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  height: 1px;
  background-color: #ebebeb;
  content: "";
  background-clip: content-box;
}

.comment .content {
  margin: 50rpx 0 0 70rpx;
}

.no-info {
  text-align: center;
  margin: 80rpx 0;
}