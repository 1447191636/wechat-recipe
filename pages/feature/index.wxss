.feature-wrapper {
  padding-top: 20rpx;
}

.note-list {
  width: 330rpx;
  display: inline-block;
  vertical-align: top;
  margin-left: 30rpx;
}

.item-wrapper {
  border-radius: 15rpx;
  overflow: hidden;
  margin-bottom: 30rpx;
  box-shadow: 0 2px 8px 0 rgba(0, 0, 0, 0.08);
}

.item-wrapper image {
  width: 100%;
  display: block;
}

.item-wrapper .title {
  margin-top: 20rpx;
  font-size: 14px;
}

.info-wrapper {
  padding: 0 10rpx;
}

.user-wrapper {
  display: flex;
  flex-direction: row;
  align-items: center;
  margin: 20rpx 0;
}

.user-wrapper .avatar {
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  margin-right: 10rpx;
}

.user-wrapper text {
  font-size: 12px;
}

/* 按钮 */
.feature-wrapper .van-button {
  bottom: 80px;
  left: 50%;
  position: fixed;
  transform: translate(-50%, 0);
  box-shadow: 0 5px 10px 0 rgba(0, 0, 0, 0.3);
}