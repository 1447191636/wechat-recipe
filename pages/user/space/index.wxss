.item {
  margin-top: 50rpx;
}

.avatar-wrapper .van-cell__value {
  flex: initial;
}

.avatar-wrapper .van-cell__title {
  line-height: 98px;
}

.avatar-wrapper .van-uploader__preview {
  margin: 8px 8px 0 0;
}

.avatar-wrapper .van-uploader__upload {
  margin: 8px 8px 0 0;
}

.upload-wrapper {
  width: 253px;
  text-align: left;
}

.button-wrapper {
  margin-top: 50rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.button-wrapper .van-button {
  bottom: 50px;
  left: 50%;
  position: fixed;
  transform: translate(-50%, 0);
  box-shadow: 0 5px 10px 0 rgba(0, 0, 0, 0.3);
}