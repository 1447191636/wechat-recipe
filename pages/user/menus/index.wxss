.create-wrapper,
.star-wrapper {
  padding: 20rpx 30rpx 0;
}

.card-wrapper {
  width: 50%;
  padding: 0 20rpx;
  box-sizing: border-box;
  display: inline-block;
}

.card {
  position: relative;
  margin-bottom: 30rpx;
  border-radius: 5px;
  overflow: hidden;
}

.card .cover {
  width: 100%;
  height: 250rpx;
  display: block
}

.info-wrapper {
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  text-align: center;
  position: absolute;
  background: rgba(0, 0, 0, 0.14);
}

.info-wrapper .name {
  font-weight: bold;
  padding: 80rpx 10rpx 0;
  color: #fff;
  font-size: 15px;
}

.info-wrapper .count {
  color: #fff;
  font-size: 13px;
  padding-top: 10rpx;
}

.no-wrapper {
  position: relative;
  min-height: calc(100vh - 54px);
}

.no-info {
  top: 50%;
  left: 50%;
  display: flex;
  flex-direction: column;
  align-items: center;
  position: absolute;
  transform: translate(-50%, -60%);
}

.no-img {
  display: block;
}

.no-content {
  margin-top: 30rpx;
  text-align: center;
  color: #999;
}